{
  "ci": {
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.8 }],
        "categories:best-practices": ["error", { "minScore": 0.8 }],
        "categories:seo": ["error", { "minScore": 1.0 }]
      }
    },
    "collect": {
      "settings": {
        "skipAudits": [
          "robots-txt",
          "canonical",
          "tap-targets",
          "is-crawlable",
          "works-offline",
          "offline-start-url"
        ]
      }
    }
  }
}
